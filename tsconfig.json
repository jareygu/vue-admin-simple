{
    "compilerOptions": {
        "allowJs": true,
        "noImplicitAny": false,
        "target": "esnext",
        "module": "esnext",
        "outDir": "output",
        "strict": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ]
    },
    "include": [
        "src/**/*.js",
        "src/**/*.ts",
        "src/**/*.vue",
    ],
    "exclude": [
        "node_modules"
    ]
}